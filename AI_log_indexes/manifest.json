{
  "manifest_version": 3,
  "name": "ChatGPT Conversation Index",
  "version": "1.2.22",
  "description": "会話インデックス＋HTML/MD/JSONエクスポート。ウィンドウ閉時の保存を強化（localミラー＋windows.onRemoved＋起動/訪問時flush）。",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "export_template.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "permissions": [
    "downloads",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "sw.js"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  }
}