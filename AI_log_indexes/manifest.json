{
  "manifest_version": 3,
  "name": "ChatGPT Conversation Index",
  "version": "1.2.2",
  "description": "会話インデックス＋HTML/MD/JSONエクスポート。ウィンドウ閉時の取りこぼしを次回起動で自動再保存。",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "permissions": [
    "downloads",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "sw.js"
  }
}